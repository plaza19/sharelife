<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/linearLayout_chat_message"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/message_round"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/textViewMessage_chat_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo mensaje"
            android:textColor="@color/white"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/textView_date_chat_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="10dp"
            android:textColor="#CCC"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imageView_viewed_chat_message"
            android:layout_width="20dp"
            android:scaleType="centerCrop"
            android:layout_height="20dp"
            android:src="@drawable/double_check_dark"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</RelativeLayout>
